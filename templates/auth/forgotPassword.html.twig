{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    <main>
        <div class="row justify-content-center pt-5">
            <div class="col-10 col-md-4">
                <h1 class="mb-5 text-center">Mot de passe oublié</h1>
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success">
                        {{ message }}
                    </div>
                {% endfor %}
                {% for message in app.flashes('error') %}
                    <div class="alert alert-success">
                        {{ message }}
                    </div>
                {% endfor %}
                {{ form_start(formPasswordForgot) }}   
                    <div class="form-group">
                        <label for="forgotPassword" class="labelForm" >Nom d'utilisateur</label>
                        {{ form_widget(formPasswordForgot.username) }}
                    </div>
                    <div class="form-group my-4 text-center">
                        <button type="submit" class="btnValidate">Réinitialiser</button>
                    </div>
                    <input type="hidden" id="passwordForgotToken" name="_csrf_token" value="{{ csrf_token('forgotPassToken') }}" />
                {{ form_end(formPasswordForgot) }}
            </div>
        </div>
    </main>
{% endblock %}