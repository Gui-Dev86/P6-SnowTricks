{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    <main>
        <div class="row justify-content-center mt-5">         
            <div class="col-10 col-md-4">
                <h1 class="mb-5 text-center">Inscrivez-vous</h1>
                <form class="mb-4" action="/login" method="post">
                    <div class="form-group">
                        <label for="registerUsername" class="labelForm" >Nom d'utilisateur</label>
                        <input type="text" name="_username" id="registerUsername" class="form-control" placeholder="Nom d'utilisateur" value="" required>
                    </div>
                    <div class="form-group">
                        <label for="registerEmail" class="labelForm" >Email</label>
                        <input type="email" name="registerEmail" id="registerEmail" class="form-control" placeholder="Email" value="" required>
                    </div>     
                    <div class="form-group">
                        <label for="password" class="labelForm">Mot de passe</label>
                        <input type="password" name="password" id="password" class="form-control" placeholder="Mot de passe" required>
                    </div>
                    <div class="form-group">
                        <label for="passwordConfirm" class="labelForm">Confirmer votre mot de passe</label>
                        <input type="password" name="passwordConfirm" id="passwordConfirm" class="form-control" placeholder="Veuillez confirmer votre mot de passe" required>
                    </div>
                    <div class="form-group my-4 text-center">
                        <button type="submit" class="btnValidate">Inscription</button>
                    </div>
                    <input type="hidden" id="registerToken" name="register[_token]" value="????????????" />
                </form>             
            </div>
        </div>
    </main>
{% endblock %}
