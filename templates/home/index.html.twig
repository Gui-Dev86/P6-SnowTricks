{% extends 'base.html.twig' %}

{% block title %}Bienvenue sur SnowTricks !{% endblock %}

{% block body %}
    <main>
        <div class="container col-12 homeJumbotron">
            <div class="container col-12">
                <p class="font-weight-bold titleSite">The snow must go on</p>
            </div>
            <a href="#tricks">
                <img class="topChevron" src="data:image/png;base64,"/>
            </a>   
        </div>

        <span class="tricksAnchor" id="tricks"></span>         
        <div class="tricksContainer py-3">
            <div class="row">
                
                {% for trick in tricks %}
                
                    <div class="trickCard mb-3">
                        <div class="card-block">
                            <img class="card-img-top rounded-top trickImgHome" src="{{ trick.mainImage }}">
                            <div class="pt-1 px-2">
                                <div class="cardTitre">
                                    <p class="card-text"><small class="text-muted">
                                        {% if trick.dateUpdateTrick > trick.dateCreateTrick %}
                                            Mis à jour le {{ trick.dateUpdateTrick | date('d-m-Y') }} {% else %} Créé le {{ trick.dateCreateTrick | date('d-m-Y') }}
                                        {% endif %}
                                        <br />par <b>{{ trick.user.username }}</b>
                                        </small>
                                    </p>
                                    <div class="flex mb-2">
                                        <a class="font-weight-bold linkFigure" href="{{ path('trick', {'id': trick.id}) }}">{{ trick.titleTrick }}</a>
                                    {% if trick.id ==  app.user.id or app.user.roles.0 == "ROLE_ADMIN" %}
                                        <a class="iconeHome mb-2 ml-5" href="{{ path('modifyTrick') }}"><img class="card-img-top rounded-top" src="img/crayon.png"></a>
                                        <a class="iconeHome mb-2" href=""><img class="card-img-top rounded-top" src="img/poubelle.png"></a>
                                    {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                {% endfor %}
                
            </div>
            
            <div class="mt-4 text-center">
                <button id="loadMoreTricks" type="submit" name="loadNextTrick" class="btnValidate btnNewFigure mt-4">Charger figures suivante</button>
            </div>
            
        </div>
        <div class="row">
            <div class="col-12">
                <a href="#tricks">
                    <img class="downChevron" src="data:image/png;base64,"/>
                </a>
            </div>
        </div>
    </main>
{% endblock %}
