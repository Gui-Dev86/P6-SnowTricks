{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    <main>
        <div class="row justify-content-center mt-5">         
            <div class="col-10 col-md-6">
                <h1 class="mb-5 text-center">Créer une nouvelle figure</h1>
                
                <form class="mb-4" action="/createTrick" method="post" enctype="multipart/form-data">

                    <div class="form-group">
                        <label for="title" class="labelForm">Titre</label>
                        <input type="text" class="form-control"  id="title" name="title" value="{% if title is defined %} {{ title }} {% endif %}">
                    </div>

                    <div class="form-group">
                        <label for="content" class="labelForm">Contenu</label>
                        <textarea type="text" class="form-control" rows="10" id="content" name="content">{% if content is defined %} {{ content }} {% endif %}</textarea>
                    </div>
                    <div class="form-group">
                        <div class="form-group centerMobile">
                            <p>Cliquez pour ajouter un média</p>
                            {# {{ form_widget(form.upload) }} #}
                            <input type="hidden" id="image-counter" value="0">
                            <div class="form-group mt-2">
                                <button type="button" class="btnValidate" id="add-image">Ajouter un média</button>
                                <span class="counter-image text-danger"></span>
                            </div>                                     
                        </div>
                    </div>
                    <p class="font-weight-bold font-italic mb-3">**Attention à bien sélectionner une image au format png ou jpeg ou une vidéo Youtube</p>
                    <label for="category" class="labelForm">Catégorie</label><br />
                    <select name="category" id="category">
                        <option value="">Grab</option>
                        <option value="">Rotation</option>
                        <option value="">Flip</option>
                        <option value="">Slide</option>
                        <option value="">One foot tricks</option>
                        <option value="">Old school</option>
                    </select>
                    <div class="form-group my-4 text-center">
                        <button type="submit" name="validateTrick" class="btnValidate btnNewFigure mt-4 mb-3">Créer</button>
                    </div>
                </form>
            </div>
        </div>
    </main>
{% endblock %}
