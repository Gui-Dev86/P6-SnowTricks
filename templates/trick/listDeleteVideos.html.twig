{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    <main>
        <div class="row justify-content-center mt-5">         
            <div class="col-12">
                <h1 class="mb-5 text-center">Supprimer des médias</h1>
                <div class="row justify-content-center">   
                    <div class="col-10 col-md-6">
                        {% for message in app.flashes('success') %}
                            <div class="alert alert-success">
                                {{ message }}
                            </div>
                        {% endfor %}
                        {% if trick.videos | length > 0  %}
                            <div class="row">
                                <div class="col-2">
                                    <div class="titleMedias">
                                        <h4 class="pl-3">Nos vidéos</h4>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                {% for video in trick.videos %}
                                    <div class="col-10 offset-1 mb-3">
                                        <iframe class="medias videosMobile" src="{{ video.linkVideo }}" allowfullscreen></iframe>
                                        <div class="text-center">
                                            <a class="mediasDelete linkDeleteMedias mb-3" href="{{ path('deleteVideo', {'id': trick.id}) }}?video={{ video.id }}">Supprimer</a>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        {% else %}
                            <div class="container col-12">
                                <div class="col-12">
                                    <p class="font-weight-bold text-center">Il n'y a pas de video disponible pour ce trick.</p>
                                </div>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock %}