                                        <tr class="trCompte">
                                            <td class="text-center">Id:</td>
                                            <td class="text-center">id{#{{ comment.id }} #}</td>
                                        </tr>
                                        <tr class="trCompte">
                                            <td class="text-center">Auteur:</td>
                                            <td class="text-center">Test{#{{ comment.autor }} #}</td>
                                        </tr>
                                        <tr class="trCompte">
                                            <td class="text-center">Création:</td>
                                            <td class="text-center">**/**/**{#{{ comment.dateCreateCom | date('d-m-Y') }} #}</td>
                                        </tr>                                  
                                        <tr class="trCompte">
                                            <td class="text-center">Supprimer:</td>
                                            <td class="text-center"><a class="nav-link" href="{{ path('home') }}{#{{ comment.id }} #}"><img src="img/poubelle.png"></a></td>                                    
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                {# {% endfor %} #}
                    <div id="pagingAdminUsers" class="paging border-top">
                        {% include('/paging/pagingAdminUsers.html.twig') %}
                        {# with {'route' : 'administration', 'paging' : pagingTrick} #}
                    </div>  
                </div>
            </div>
        </div>
    </main>
