{% extends 'base.html.twig' %}

{% block title %}SnowTricks - Administration{% endblock %}

{% block body %}
    <main>
        <div class="container col-10 containerAdmin">
            <div class="row containerAdmin">
                {% include('/administration/navAdministration.html.twig') %}
                <div class="col-md-9">
                    <h3 class="my-3">Administration des Commentaires</h3>

                    <div class="container col-12 pb-3 tableAdmin displayBlock">
                        <table class="col-12">
                            <thead>
                                <tr>
                                    <th class="column1 text-center">Figure</th>
                                    <th class="column2 text-center">Id</th>
                                    <th class="column3 text-center">Auteur</th>
                                    <th class="column4 text-center">Création</th>
                                    <th class="column5 columnEnd text-center">Supprimer</th>
                                </tr>
                            </thead>
                            <tbody>
                            {# {% for comment in comments %} #}
                                <tr>
                                    <td class="column1 text-center"><a class="nav-link font-weight-bold" href="{{ path('trick', {'id': 1}) }}">Test{# {{ comment.tricks.titletrick }} #}</a></td>
                                    <td class="column2 text-center">id{#{{ comment.id }} #}</td>
                                    <td class="column3 text-center">Test{#{{ comment.autor }} #}</td>
                                    <td class="column4 text-center">**/**/**{#{{ comment.dateCreateCom | date('d-m-Y') }} #}</td>
                                    <td class="column5 columnEnd text-center"><a class="nav-link" href="{{ path('home') }}{#{{ comment.id }} #}"><img src="img/poubelle.png"></a></td>                                    
                                </tr>
                            {# {% endfor %} #}
                            </tbody>
                        </table>
                    </div>
                {# {% for comment in comments %} #}
                        <div class="container col-12 col-md-10 mb-3 displayNone containerAdminMobile">
                            <div class="row justify-content-center">
                                <div class="container col-12 col-md-8 offset-md-2">
                                    <table class="panel">
                                        <tr class="trCompte">
                                            <td class="text-center">Figure:</td>
                                            <td class="text-center"><a class="nav-link font-weight-bold" href="{{ path('trick', {'id': 1}) }}">{#{{ comment.tricks.titletrick }} #}Figure</a></td>
