{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    <main>
        <div class="row justify-content-center mt-5">         
            <div class="col-10 col-md-4">
                <h1 class="mb-5 text-center">Modifiez votre password</h1>
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success">
                        {{ message }}
                    </div>
                {% endfor %}
                 {{ form_start(formModifyPass) }}
                    <div class="form-group">
                        <label for="precedentPassword" class="labelForm" >Mot de passe actuel</label>
                        {{ form_widget(formModifyPass.precedentPassword) }}
                        {{ form_errors(formModifyPass.precedentPassword) }}
                    </div>  
                    <div class="form-group">
                        <label for="newPassword" class="labelForm">Nouveau mot de passe</label>
                        {{ form_widget(formModifyPass.newPassword) }}
                        {{ form_errors(formModifyPass.newPassword) }}
                    </div>
                    <div class="form-group">
                        <label for="confirmPassword" class="labelForm">Confirmer votre nouveau mot de passe</label>
                        {{ form_widget(formModifyPass.confirmPassword) }}
                        {{ form_errors(formModifyPass.confirmPassword) }}
                    </div>
                    <div class="form-group my-4 text-center">
                        <button type="submit" class="btnValidate">Modifier</button>
                    </div>
                    <input type="hidden" id="modifyPasswordToken" name="modifyPassword[_token]" value="????????????" />
                {{ form_end(formModifyPass) }}
            </div>
        </div>
    </main>
{% endblock %}
